<! Add Balance page>
<style>
  body {
    background-image: url('/img/AirMagsFalling.png');
    background-attachment: fixed;
  }
  #test p {
    margin-top: 25px;
    font-size: 42px;
    text-align: center;

    -webkit-animation: fadein 2s; /* Safari, Chrome and Opera > 12.1 */
       -moz-animation: fadein 2s; /* Firefox < 16 */
        -ms-animation: fadein 2s; /* Internet Explorer */
         -o-animation: fadein 2s; /* Opera < 12.1 */
            animation: fadein 2s;
  }

  @keyframes fadein {
      from { opacity: 0; }
      to   { opacity: 1; }
  }

  /* Firefox < 16 */
  @-moz-keyframes fadein {
      from { opacity: 0; }
      to   { opacity: 1; }
  }

  /* Safari, Chrome and Opera > 12.1 */
  @-webkit-keyframes fadein {
      from { opacity: 0; }
      to   { opacity: 1; }
  }

  /* Internet Explorer */
  @-ms-keyframes fadein {
      from { opacity: 0; }
      to   { opacity: 1; }
  }

  /* Opera < 12.1 */
  @-o-keyframes fadein {
      from { opacity: 0; }
      to   { opacity: 1; }
  }
</style>
{{#each users}}
  <div class="card card-body">
    <div id="test">
      <p>Add Money to Your Account</p>
    </div>
    <h5>Current Balance: ${{bal}}</h5>
    <div class="form-group">
      <label for="price">Amount to add: </label>
      <input type="text" class="form-control" name="price" required>
    </div>
  </div>
{{else}}
  <p>poo</p>
{{/each}}
