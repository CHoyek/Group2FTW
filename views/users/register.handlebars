{{#if user}}
  <!-- if logged in, redirect to home -->
  <meta http-equiv="refresh" content="0;url=/">
{{else}}
  <! row is for the grid system>
  <div class="row">
    <! 6 column div, pushed to the middle>
    <div class="col-md-6 mx-auto">
      <div class="card card-body">
        <h3 class="text-center">Account Register</h3>
        <form action="/users/register" method="post">
          <div class="form-group">
            <label for="username">Username</label>
            <input type="text" name="username" class="form-control" value="{{username}}" required>
          </div>
          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" name="email" class="form-control" value="{{email}}" required>
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input type="password" name="password" id = "pw1" class="form-control" value="{{password}}" required>
          </div>
          <div class="form-group">
            <label for="password2">Confirm Password</label>
            <input type="password" name="password2" class="form-control" value ="{{password2}}" required>
          </div>
          <button type="submit" id = "submitbtn" class = "btn-info">Submit</button>
        </form>
      </div>
    </div>
  </div>
{{/if}}
