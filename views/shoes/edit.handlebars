<!loop through the errors>
{{#each errors}}
  <div class="alert alert-danger">{{text}}</div>
  <!no errors, nothing happened>
{{else}}

{{/each}}


<div class="card card-body">
  <h3>Edit Shoes Information</h3>
  <form action="/shoes/{{shoe.id}}?_method=PUT" method="post">
    <input type="hidden" name="_method" value="PUT">
    <!standard bootstrp markup>
    <div class="form-group">
    <label for="brandname">Brand Name</label>
    <input type="text" class="form-control" name="brandname" value = "{{shoe.brandname}}" required>
    </div>

     <div class="form-group">
    <label for="shoesname">Shoes Name</label>
    <input type="text" class="form-control" name="shoesname" value ="{{shoe.shoesname}}" required>
    </div>
      
    <div class="form-group">
    <label for="price">Shoes Price</label>
    <input type="text" class="form-control" name="price" value="{{shoe.price}}" required>
    </div>
      
    <div class="form-group">
    <label for="description">Shoes Description</label>
          <textarea class="form-control" name="description" required >{{shoe.description}}</textarea>
    </div>

    <!Submit button>
    <button type="submit" class = "btn btn-info ">Submit</button>
  </form>
</div>