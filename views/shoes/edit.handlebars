<div class="card card-body">
  <h3>Edit Shoes Information</h3>
  <form action="/shoes/{{shoe.id}}?_method=PUT" method="post">
    <input type="hidden" name="_method" value="PUT">
    <!standard bootstrp markup>
    <!--<div class="form-group">
      <label for="brandname">Brand Name</label>
      <input type="text" class="form-control" name="brandname" value = "{{shoe.brandname}}" required>
    </div>-->

    <div class="form-group">
      <label for="brandname">Brand Name</label>
      <select class="form-control" name="brandname" value = "{{shoe.brandname}}" required>
		<option disabled selected hidden value="">Select Brand</option>
        <option value="Adidas">Adidas</option>
        <option value="Air Jordan">Air Jordan</option>
        <option value="Asics">Asics</option>
        <option value="Nike">Nike</option>
        <option value="Reebok">Reebok</option>
        <option value="Under Armour">Under Armour</option>
      </select>
    </div>

     <div class="form-group">
      <label for="shoesname">Shoes Name</label>
      <input type="text" class="form-control" name="shoesname" value ="{{shoe.shoesname}}" required>
    </div>

    <div class="form-group">

      <label for="price">Shoes Price $</label>
      <input type="text" class="form-control" name="price" value="{{shoe.price}}" required>

    </div>

    <!--<div class="form-group">
    <label for="description">Shoes Description</label>
          <textarea class="form-control" name="description" required >{{shoe.description}}</textarea>
    </div>-->
	 

    <div class="form-group">
      <label for="shoesize">Shoe Size</label>
      <select class="form-control" name="shoesize" value = "{{shoe.shoesize}}" required>
        <option disabled selected hidden>Select Shoe Size</option>
        <option value="8">8</option>
        <option value="8.5">8.5</option>
        <option value="9">9</option>
        <option value="9.5">9.5</option>
        <option value="10">10</option>
        <option value="11">11</option>
		<option value="11.5">11.5</option>
		<option value="12">12</option>
		<option value="12.5">12.5</option>
      </select>
    </div>

    <!Submit button>
    <button type="submit" class = "btn btn-info ">Submit</button>
  </form>
</div>
