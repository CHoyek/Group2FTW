<style>
  body {
    background: white;
  }
  #test p {
    margin-top: 25px;
    font-size: 42px;
    text-align: center;

    -webkit-animation: fadein 2s; /* Safari, Chrome and Opera > 12.1 */
       -moz-animation: fadein 2s; /* Firefox < 16 */
        -ms-animation: fadein 2s; /* Internet Explorer */
         -o-animation: fadein 2s; /* Opera < 12.1 */
            animation: fadein 2s;
  }

  @keyframes fadein {
      from { opacity: 0; }
      to   { opacity: 1; }
  }

  /* Firefox < 16 */
  @-moz-keyframes fadein {
      from { opacity: 0; }
      to   { opacity: 1; }
  }

  /* Safari, Chrome and Opera > 12.1 */
  @-webkit-keyframes fadein {
      from { opacity: 0; }
      to   { opacity: 1; }
  }

  /* Internet Explorer */
  @-ms-keyframes fadein {
      from { opacity: 0; }
      to   { opacity: 1; }
  }

  /* Opera < 12.1 */
  @-o-keyframes fadein {
      from { opacity: 0; }
      to   { opacity: 1; }
  }
</style>
<body>
  <div id="test">
    <p>Confirm your purchase</p>
  </div>
</body>
{{#each shoes}}
  <div class="card card-body mb-2">
    <h4>Brand Name: {{brandname}}</h4>
    <h5>Shoes Name: {{shoesname}}</h5>
    <h5>Shoes Price: ${{price}}</h5>
    <h5>Shoe Size: {{shoesize}}</h5>
  </div>
{{else}}
    <p>No valid shoe found for this ID.</p>
{{/each}}
