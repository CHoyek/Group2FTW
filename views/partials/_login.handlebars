<style>
  #usernameTest{}
  #passwordTest{}
  #submitButtonTest{}
</style>
<div class="row mx-auto">
  <form method="post" action="/users/login">
    <div class="form-group">
      <label for="username">Username</label>
      <input type="username" name="username" id="usernameTest" class="form-control" required>
    </div>
    <div class="form-group">
      <label for="password">Password</label>
      <input type="password" name="password" id="passwordTest" class="form-control" required>
    </div>
    <button type="submit" id="submitButtonTest" class = "btn-info">Submit</button>
  </form>
</div>
